# ISP Management System - Secure Configuration Template
# Copy this to .env and replace with actual values

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="file:./prod.db"

# JWT Configuration (GENERATE NEW SECRETS!)
JWT_SECRET=${GENERATE_WITH: openssl rand -base64 32}
JWT_REFRESH_SECRET=${GENERATE_WITH: openssl rand -base64 32}
CSRF_SECRET=${GENERATE_WITH: openssl rand -base64 32}

# WhatsApp Configuration
WHATSAPP_ADMIN_NUMBER=${YOUR_WHATSAPP_NUMBER}
WHATSAPP_SESSION_PATH=./server/auth_info_baileys
WHATSAPP_SESSION_BACKUP=true
WHATSAPP_ENCRYPTION_KEY=${GENERATE_WITH: openssl rand -hex 32}

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://172.17.2.3
VALID_API_KEYS=${GENERATE_API_KEYS}
SESSION_SECRET=${GENERATE_WITH: openssl rand -base64 32}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=${YOUR_SENTRY_DSN}
LOG_LEVEL=info

