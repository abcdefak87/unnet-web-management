# ISP Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# WhatsApp Configuration
WHATSAPP_ADMIN_NUMBER=628123456789
WHATSAPP_SESSION_PATH=./server/auth_info_baileys
WHATSAPP_SESSION_BACKUP=true
WHATSAPP_QR_PATH=./server/public/qr
WHATSAPP_LOG_LEVEL=info
WHATSAPP_AUTO_REPLY=false
WHATSAPP_COMMAND_PREFIX=!
WHATSAPP_MARK_AS_READ=true
WHATSAPP_ADMIN_NOTIFICATIONS=true
WHATSAPP_BROADCAST_NEW_JOBS=true
WHATSAPP_BROADCAST_UPDATES=true
WHATSAPP_DAILY_SUMMARY_TIME=17:00
WHATSAPP_REMINDER_INTERVAL=1h

# WhatsApp Connection Settings
WHATSAPP_VERSION=[2,2413,1]
WHATSAPP_BROWSER=["Chrome (Windows)","Chrome","120.0.0.0"]
WHATSAPP_CONNECT_TIMEOUT=60000
WHATSAPP_QR_TIMEOUT=120000
WHATSAPP_MAX_RECONNECT_ATTEMPTS=10
WHATSAPP_RECONNECT_DELAY=5000

# Security Configuration
WHATSAPP_JWT_SECRET=your-whatsapp-jwt-secret-change-in-production
WHATSAPP_ENCRYPTION_KEY=your-encryption-key-change-in-production
WHATSAPP_ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
WHATSAPP_RATE_LIMIT_MAX=20
WHATSAPP_RATE_LIMIT_WINDOW=60000

# Queue Settings
WHATSAPP_QUEUE_MAX_SIZE=1000
WHATSAPP_QUEUE_RETRY_ATTEMPTS=3

# API Configuration
WHATSAPP_API_ENABLED=true
WHATSAPP_API_PORT=3002
WHATSAPP_API_CORS_ORIGIN=*

# Monitoring
WHATSAPP_MONITORING=true
WHATSAPP_DB_INTEGRATION=true
WHATSAPP_LOG_MESSAGES=false
WHATSAPP_LOG_COMMANDS=true

# Multiple WhatsApp Numbers (Future Feature)
# WHATSAPP_NUMBERS=628123456789,628987654321
# WHATSAPP_NUMBER_LABELS=Support,Sales
